{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Raid Notices Schedule Schema",
  "type": "object",
  "required": [
    "timezone",
    "notifications",
    "events"
  ],
  "properties": {
    "timezone": {
      "type": "string",
      "format": "IANATimeZone"
    },
    "notifications": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "minutesBefore": {
            "type": "integer",
            "default": 0
          },
          "secondsBefore": {
            "type": "integer",
            "default": 0
          },
          "roleMention": {
            "type": "string"
          },
          "customMessage": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "weekday": {
            "type": "string",
            "enum": [
              "sunday",
              "monday",
              "tuesday",
              "wednesday",
              "thursday",
              "friday",
              "saturday"
            ]
          },
          "hour": {
            "type": "integer",
            "minimum": 0,
            "maximum": 23
          },
          "minute": {
            "type": "integer",
            "minimum": 0,
            "maximum": 59
          },
          "second": {
            "type": "integer",
            "minimum": 0,
            "maximum": 59,
            "default": 0
          }
        },
        "required": [
          "name",
          "weekday",
          "hour",
          "minute"
        ]
      }
    }
  },
  "additionalProperties": false
}
