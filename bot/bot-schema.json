{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Raid Notices Bot Schema",
  "type": "object",
  "required": [
    "prefix",
    "admins",
    "channels"
  ],
  "additionalProperties": false,
  "properties": {
    "prefix": {
      "type": "string",
      "minLength": 1
    },
    "admins": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[0-9]+$"
      }
    },
    "channels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[0-9]+$"
      }
    },
    "useEmbeds": {
      "type": "boolean",
      "default": false
    },
    "embedColor": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{6}$",
      "default": "EEEEEE"
    },
    "embedAuthor": {
      "type": "string",
      "minLength": 1
    }
  }
}
